<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="12dp"
    android:layout_height="110dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumb"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/thumb_exam_legislacao" />

            <TextView
                android:id="@+id/title"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/thumb"
                android:text="TÍTULO"
                android:lines="2"
                android:textColor="#000"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/bestScoreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginLeft="12dp"
                android:layout_toEndOf="@+id/thumb"
                android:text="Melhor Pontuação:"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bestScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/bestScoreLabel"
                android:text="78%"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/questionCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bestScoreLabel"
                android:layout_marginLeft="12dp"
                android:layout_toEndOf="@+id/thumb"
                android:text="10 Questões"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/start"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/play_background"
                android:scaleType="center"
                android:src="@drawable/ic_play_exam" />

            <RelativeLayout
                android:id="@+id/newExam"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ic_circle_shape"
                android:gravity="center"></RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>