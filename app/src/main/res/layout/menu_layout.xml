<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_background">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:alpha=".75"
        android:src="@drawable/card_background" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="-150dp"
        android:alpha=".45"
        android:src="@drawable/ic_logo" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:gravity="center"
        android:orientation="vertical">

        <TableRow
            android:id="@+id/rowStart"
            android:layout_margin="10dp"
            android:background="@color/black_overlay"
            android:gravity="center"
            android:visibility="invisible">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_car_key" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INICIAR"
                android:textColor="@color/menu_text_color"
                android:textSize="26sp"
                android:textStyle="bold" />
        </TableRow>


        <TableRow
            android:id="@+id/rowNextLesson"
            android:layout_margin="10dp"
            android:background="@color/black_overlay"
            android:gravity="center"
            android:visibility="invisible">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_next_lesson" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRÓXIMA LIÇÃO"
                android:textColor="@color/menu_text_color"
                android:textSize="26sp"
                android:textStyle="bold" />
        </TableRow>


        <TableRow
            android:id="@+id/rowCards"
            android:layout_margin="10dp"
            android:background="@color/black_overlay"
            android:gravity="center"
            android:visibility="invisible">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_car_card" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtRowCards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="CARDS"
                    android:textColor="@color/menu_text_color"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/notificationNewCards"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/txtRowCards"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="76dp"
                    android:layout_marginTop="-8dp"
                    android:background="@drawable/ic_circle_shape"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/countNewCards"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="@color/menu_text_color"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:id="@+id/rowExams"
            android:layout_margin="10dp"
            android:background="@color/black_overlay"
            android:gravity="center"
            android:visibility="invisible">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_lessons" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtRowExams"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXAMES"
                    android:layout_centerVertical="true"
                    android:textColor="@color/menu_text_color"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/notificationNewExams"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/txtRowExams"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="93dp"
                    android:layout_marginTop="-8dp"
                    android:background="@drawable/ic_circle_shape"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/countNewExams"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="@color/menu_text_color"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>
        </TableRow>


    </TableLayout>
</RelativeLayout>
